<!-- Item-Selector. Kann als background fuer eine View gesetzt werden, die anzeigen soll, dass sie selectiert wurde-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_mediumAnimTime">

    <item android:drawable="@color/selected_item_pressed" android:state_pressed="true"/>
    <item android:drawable="@color/selected_item_selected" android:state_selected="true"/>
    <item android:drawable="@color/selected_item_activated" android:state_activated="true"/>

</selector>